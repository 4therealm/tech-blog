<div class="post">
  <h3>{{post.title}}</h3>
  <p>{{post.content}}</p>
  <h4>Add a Comment:</h4>
  <form action="/post/{{post.id}}/add-comment" method="post">
    <textarea name="comment_text" rows="4" cols="50"></textarea>
     <input type="hidden" id="user_id" value="{{}}">
      <input type="hidden" name="post_id" value="{{post.id}}">
    <br>
    <input type="submit" value="Submit Comment">
  </form>
  <h4>Comments:</h4>
  {{#each post.comments}}
    <div class="comment">
      <p>{{comment_text}}</p>
    </div>
  {{/each}}
</div>
