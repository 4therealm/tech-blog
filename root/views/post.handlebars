<div class="post">
  <h3>{{post.title}}</h3>
  <p>{{post.content}}</p>
  <p>{{format_date post.createdAt}}</p>
  <h4>Comments:</h4>
  {{#each post.comments}}
    <div class="comment">
      <p>{{comment_text}}</p>
      <p>{{user.username}}</p>
    </div>
  {{/each}}
</div>


    <form class='comment-form'>
  <label for='comment'>
    Add Comment:
  </label>
  <br />
  <textarea id='commentContent' name='comment' rows='2' cols='30'>
  </textarea>
  <br />
  <br />
  <button type='submit' value='Submit'>
    Submit
  </button>
<input type="hidden" id="user_id" data-userid="{{user_id}}">
  <input type="hidden" id="postId" value="{{post.id}}">
</form>

<script src="/js/comment.js"></script>